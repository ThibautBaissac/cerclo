<div class="mb-6 text-gray-600">
    <p><%= pluralize(@groups.count, 'group') %> found</p>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @groups.each do |group| %>
        <div class="rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300 border border-gray-50">
            <div class="p-6">
                <div class="flex justify-between mb-2">
                    <span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800"><%= group.topic.name %></span>
                    <% if group.full? %>
                        <span class="px-2 py-1 text-xs font-medium rounded-full bg-red-100 text-red-800">Full</span>
                    <% else %>
                        <span class="px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800"><%= group.spots_available_count %> spots available</span>
                    <% end %>
                </div>
                <div class="mb-4">
                    <h2 class="text-xl font-bold text-gray-800"><%= group.title %></h2>
                    <p class="text-gray-600 mt-1"><%= group.sub_title %></p>
                    <p class="mt-2 text-sm">
                        <span class="font-medium text-gray-700">Frequency:</span> <span class="text-gray-600"><%= group.frequency.humanize %></span>
                    </p>
                    <% if group.next_session.present? %>
                        <p class="mt-1 text-sm">
                            <span class="font-medium text-gray-700">Next session:</span>
                            <span class="text-gray-600"><%= group.next_session.starts_at.strftime("%b %d, %Y at %H:%M") %></span>
                        </p>
                    <% end %>
                    <%= link_to "Voir les dÃ©tails", group_path(group), class: "inline-block mt-3 text-blue-600 hover:text-blue-800 font-medium" %>
                </div>
                <div class="pt-4 border-t border-gray-200">
                    <p class="text-sm text-gray-500"><%= group.facilitator.job %></p>
                    <p class="text-base font-semibold"><%= group.facilitator.fullname %></p>
                </div>
            </div>
        </div>
    <% end %>
</div>
