<div class="rounded-xl shadow-sm border border-gray-50 overflow-hidden mb-8">
    <div class="p-6 sm:p-8">
    <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center mt-0">
    <span class="text-indigo-600"><%= icon "calendar-days", variant: :outline %></span>
        Prochaine s√©ance
    </h2>
    <div class="bg-indigo-50 rounded-lg p-4 flex items-center">
        <div class="rounded-lg border border-indigo-100 p-3 text-center mr-4">
        <div class="text-xs text-gray-500 uppercase font-semibold tracking-wide"><%= l(next_session.starts_at, format: '%b') %></div>
        <div class="text-2xl font-bold text-gray-900"><%= l(next_session.starts_at, format: '%d') %></div>
        </div>
        <div>
        <div class="font-semibold text-gray-900"><%= l(next_session.starts_at, format: '%A') %></div>
        <div class="text-gray-600"><%= l(next_session.starts_at, format: '%H:%M') %></div>
        </div>
    </div>
    </div>
    <div class="mt-4 flex flex-wrap gap-2">
    <% next_session.group_session_participants.each do |group_session_participant| %>
        <% status_color = case group_session_participant.status
                        when 'confirmed' then 'bg-green-50 text-green-700'
                        when 'rejected' then 'bg-yellow-50 text-yellow-700'
                        else 'bg-gray-100 text-gray-800'
                        end %>
        <div class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-sm font-medium <%= status_color %> transition-all hover:opacity-90">
        <%= icon "user", variant: :outline, class: "w-4 h-4" %>
        <span><%= group_session_participant.user.username %></span>
        <span class="text-xs px-1.5 py-0.5 rounded-md bg-white bg-opacity-50">
            <%= group_session_participant.status %>
        </span>
        </div>
    <% end %>
    </div>
</div>
