<div class="max-w-2xl mx-auto pt-24 px-4">
  <h1 class="text-3xl font-bold mb-8">Profile</h1>

  <div class="bg-white rounded-lg shadow-md p-6 space-y-4">
    <div class="border-b pb-4">
      <p class="text-gray-600"><span class="font-semibold">Username:</span> <%= @user.username %></p>
      <p class="text-gray-600"><span class="font-semibold">Email:</span> <%= @user.email %></p>
    </div>

    <% if @user.profile %>
      <div class="space-y-3">
        <p class="text-gray-600"><span class="font-semibold">Full Name:</span> <%= @user.fullname %></p>
        <p class="text-gray-600"><span class="font-semibold">Job:</span> <%= @user.job %></p>
        <p class="text-gray-600"><span class="font-semibold">Short Bio:</span> <%= @user.short_bio %></p>
        <div class="border-t pt-3">
          <p class="text-gray-600"><span class="font-semibold">Bio:</span></p>
          <p class="text-gray-600 mt-2"><%= @user.bio %></p>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-6">
    <%= link_to 'Edit Profile', edit_user_path(@user),
        class: 'inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
  </div>
</div>
